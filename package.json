{
  "name": "jokkerin-ventti",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "npm run build:wasm && vite",
    "dev:watch": "concurrently -k \"npm run watch:wasm\" \"vite\"",
    "watch:wasm": "cd wasm && cargo watch -s \"npm run build:wasm\"",
    "build": "npm run build:wasm:prod && tsc && vite build",
    "build:wasm": "npm run _wasm_build -- --dev",
    "build:wasm:prod": "npm run _wasm_build -- --release",
    "_wasm_build": "cd wasm && RUSTFLAGS=\"-C target-feature=+relaxed-simd\" rustup run nightly wasm-pack build --target web --out-dir pkg --features portable_simd",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^4.0.16",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "jsdom": "^27.4.0",
    "typescript": "latest",
    "vite": "latest",
    "vite-plugin-wasm-pack": "^0.1.12",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=20"
  }
}