{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Animation Clip (Rotation V2 - Quaternion or Euler)",
    "type": "object",
    "properties": {
        "version": {
            "const": 2
        },
        "name": {
            "type": "string"
        },
        "duration": {
            "type": "number"
        },
        "keyframes": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "time": {
                        "type": "number"
                    },
                    "pose": {
                        "type": "object",
                        "title": "Pose (Rotations)",
                        "properties": {
                            "root_position": {
                                "type": "array",
                                "items": {
                                    "type": "number"
                                },
                                "minItems": 3,
                                "maxItems": 3
                            },
                            "pelvis": {
                                "$ref": "#/definitions/rotation"
                            },
                            "l_hip": {
                                "$ref": "#/definitions/rotation"
                            },
                            "r_hip": {
                                "$ref": "#/definitions/rotation"
                            },
                            "spine1": {
                                "$ref": "#/definitions/rotation"
                            },
                            "l_knee": {
                                "$ref": "#/definitions/rotation"
                            },
                            "r_knee": {
                                "$ref": "#/definitions/rotation"
                            },
                            "spine2": {
                                "$ref": "#/definitions/rotation"
                            },
                            "l_ankle": {
                                "$ref": "#/definitions/rotation"
                            },
                            "r_ankle": {
                                "$ref": "#/definitions/rotation"
                            },
                            "spine3": {
                                "$ref": "#/definitions/rotation"
                            },
                            "l_foot": {
                                "$ref": "#/definitions/rotation"
                            },
                            "r_foot": {
                                "$ref": "#/definitions/rotation"
                            },
                            "neck": {
                                "$ref": "#/definitions/rotation"
                            },
                            "l_collar": {
                                "$ref": "#/definitions/rotation"
                            },
                            "r_collar": {
                                "$ref": "#/definitions/rotation"
                            },
                            "head": {
                                "$ref": "#/definitions/rotation"
                            },
                            "l_shoulder": {
                                "$ref": "#/definitions/rotation"
                            },
                            "r_shoulder": {
                                "$ref": "#/definitions/rotation"
                            },
                            "l_elbow": {
                                "$ref": "#/definitions/rotation"
                            },
                            "r_elbow": {
                                "$ref": "#/definitions/rotation"
                            },
                            "l_wrist": {
                                "$ref": "#/definitions/rotation"
                            },
                            "r_wrist": {
                                "$ref": "#/definitions/rotation"
                            }
                        },
                        "additionalProperties": false
                    }
                },
                "required": [
                    "time",
                    "pose"
                ]
            }
        }
    },
    "required": [
        "name",
        "duration",
        "keyframes",
        "version"
    ],
    "definitions": {
        "rotation": {
            "oneOf": [
                {
                    "$ref": "#/definitions/euler"
                },
                {
                    "$ref": "#/definitions/quaternion"
                }
            ]
        },
        "euler": {
            "type": "object",
            "properties": {
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "z": {
                    "type": "number"
                }
            },
            "additionalProperties": false,
            "required": [
                "x",
                "y",
                "z"
            ]
        },
        "quaternion": {
            "type": "object",
            "properties": {
                "w": {
                    "type": "number"
                },
                "x": {
                    "type": "number"
                },
                "y": {
                    "type": "number"
                },
                "z": {
                    "type": "number"
                }
            },
            "additionalProperties": false,
            "required": [
                "w",
                "x",
                "y",
                "z"
            ]
        }
    }
}